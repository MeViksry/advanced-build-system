{
  "name": "advanced-build-system",
  "version": "2.0.0",
  "description": "Advanced CSS, JavaScript & HTML build system with comprehensive tooling and minification",
  "main": "index.js",
  "scripts": {
    "setup": "chmod +x setup.sh && ./setup.sh",
    "build": "npm run build:css && npm run build:js && npm run build:html",
    "build:css": "node css-builder.js build",
    "build:js": "node js-builder.js build",
    "build:html": "node html-builder.js build",
    "build:production": "npm run build:css:production && npm run build:js:production && npm run build:html:production",
    "build:css:production": "node css-builder.js build --purge --no-maps",
    "build:js:production": "node js-builder.js build --production",
    "build:html:production": "node html-builder.js build --production",
    "watch": "npm run watch:css & npm run watch:js & npm run watch:html",
    "watch:css": "node css-builder.js watch",
    "watch:js": "node js-builder.js watch",
    "watch:html": "node html-builder.js watch",
    "bundle": "node js-builder.js bundle --production",
    "bundle:dev": "node js-builder.js bundle",
    "bundle:watch": "node js-builder.js watch --bundle",
    "analyze": "node js-builder.js analyze",
    "dev": "npm run watch",
    "clean": "rimraf *.min.html *.min.html.map dist/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "postcss": "^8.4.31",
    "cssnano": "^6.0.1",
    "autoprefixer": "^10.4.16",
    "terser": "^5.24.0",
    "html-minifier-terser": "^7.2.0",
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "core-js": "^3.33.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "rollup": "^4.5.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-replace": "^5.0.5",
    "chokidar": "^3.5.3",
    "rimraf": "^5.0.5"
  },
  "keywords": [
    "css",
    "javascript",
    "html",
    "build",
    "minification",
    "postcss",
    "autoprefixer",
    "purgecss",
    "babel",
    "terser",
    "rollup",
    "bundler",
    "build-system",
    "html-minifier"
  ],
  "author": "VIKRI AHPAD TANTOWI",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MeViksry/advanced-build-system.git"
  },
  "bugs": {
    "url": "https://github.com/MeViksry/advanced-build-system/issues"
  },
  "homepage": "https://github.com/MeViksry/advanced-build-system#readme"
}